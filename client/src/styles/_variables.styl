$dark-primary = alpha(black, 0.87);
$dark-secondary = alpha(black, 0.54);

$light-primary = alpha(white, 0.87);
$light-secondary = alpha(white, 0.60);

$primary = #2196F3;
$primary-darker = #1976D2;

$accent = #9C27B0;
$accent-darker = #7B1FA2;

$font-stack = -apple-system, BlinkMacSystemFont, "Segoe UI", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Roboto", "Droid Sans", "Helvetica Neue", sans-serif;

$truncate-text {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
