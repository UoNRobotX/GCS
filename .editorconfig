# http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.opts]
insert_final_newline = false

# npm always rewrites the file with 2 space indent
[package.json]
indent_size = 2
